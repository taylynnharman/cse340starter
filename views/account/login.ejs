<title>
    <%= title %>
</title>
<h1 class="login-h1">
    <%= title %>
</h1>
<div>
    <%- message %>
</div>
<form class="login-form" action="/login" method="POST">
    <div>
        <label for="email">Email Address:</label>
        <input type="email" id="email" name="account_email" required>
    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password"
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special
            character</span>
    </div>
    <div>
        <button type="submit">Login</button>
    </div>
</form>
<p class="register-message">If you do not have an account, <a href="/account/register">register here</a>.</p>