<title>
    <%= title %>
</title>
<h1 class="login-h1">
    <%= title %>
</h1>
<div>
    <%- message %>
</div>
<form class="register-form" action="/account/register" method="post">
    <div>
        <label for="first-name">First Name:</label>
        <input type="text" id="f-name" name="account_firstname" required>
    </div>
    <div>
        <label for="last-name">Last Name:</label>
        <input type="text" id="l-name" name="account_lastname" required>
    </div>
    <div>
        <label for="email">Email Address:</label>
        <input type="email" id="email" name="account_email" required>
    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" pattern="(?=.*\d)(?=.*[A-Z])(?=.*\W).{12,}"
            required>
    </div>
    <div>
        <button type="submit">Register</button>
    </div>
</form>